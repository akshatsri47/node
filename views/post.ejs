<!-- views/post.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
</head>
<body>

    <h1><%= post.title %></h1>
    <p><%= post.body %></p>

    <h2>Comments:</h2>

    <% if (post.comments && post.comments.length > 0) { %>
        <ul>
            <%= include('partials/nestedComments', { comments: post.comments, post_id: post._id }) %>
        </ul>
    <% } else { %>
        <p>No comments yet.</p>
    <% } %>

    <!-- Form for adding a top-level comment -->
    <form action="/addcomment/<%= post._id %>" method="POST">
        <label for="commentText">Add a Comment:</label>
        <input type="text" id="commentText" name="commentText" required>
        <button type="submit">Submit Comment</button>
    </form>

</body>
</html>
